---
import AuthorCard from "@/components/AuthorCard.astro";
import MainLayout from "@/layouts/MainLayout.astro";
import { getCollection } from "astro:content";

const authors = await getCollection("author");
---

<MainLayout title="Listado de Autores" >
<h1 class="text-3xl font-semibold capitalize lg:text-4xl text-white" >Listado de Autores</h1>

<section class="grid grid-cols-1 sm:grid-cols-2 gap-6  mt-10 lg:mx-16 " >
  <!-- AuthorCard -->
  {authors.map((author) => <AuthorCard author={author} />)}

</section>

</MainLayout>