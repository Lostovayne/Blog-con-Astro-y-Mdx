---
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'

interface Props {
  author: CollectionEntry<'author'>
}

const { author } =  Astro.props
// Tomar la data de cada autor
const {data: authorData} = author

---

<div class="max-w-lg mx-auto my-2 bg-white rounded-lg shadow-md p-5">
  <Image src={authorData.avatar} alt={authorData.name} width={200} height={200} class="object-cover w-32 h-32 rounded-full mx-auto" />
  <h2 class="text-center text-2xl font-semibold mt-3">{authorData.name}</h2>
  <p class="text-center text-gray-600 mt-1">{authorData.subtitle}</p>
  <div class="flex justify-center mt-5">
    <a href={authorData.twitter} class="text-blue-500 hover:text-blue-700 mx-3">Twitter</a>
    <a href={authorData.linkedIn} class="text-blue-500 hover:text-blue-700 mx-3">LinkedIn</a>
    <a href={authorData.github} class="text-blue-500 hover:text-blue-700 mx-3">GitHub</a>
  </div>
  <div class="mt-5">
    <h3 class="text-xl font-semibold">Bio</h3>
    <p class="text-gray-600 mt-2">{ authorData.bio}</p>
    <div class="flex justify-end" >
      <a href={`/blog/${author.id}`} class="font-medium" >Leer m√°s</a>
    </div>
  </div>
</div>